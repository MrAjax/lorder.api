{
  "name": "altiore-api",
  "version": "1.0.0",
  "description": "Calculate contribution",
  "author": "razvanlomov@gmail.com",
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "engines": {
    "node": ">=8.11.3"
  },
  "scripts": {
    "start": "sh bin/start.sh && cross-env NODE_ENV=development nodemon",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "stop": "sh bin/stop.sh",
    "start:hmr": "node dist/server",
    "start:prod": "npm run build && node dist/main.js",
    "preinstall": "node bin/gcpSetup.js",
    "postinstall": "npm run build && npm run migration:up",
    "build": "rm -rf dist && nest build",
    "pretest": "cross-env TYPEORM_DATABASE=altiore_contrib_test node bin/refresh.js && npm run migration:test:up",
    "test": "cross-env TYPEORM_DATABASE=altiore_contrib_test jest --coverage -i -b --detectOpenHandles",
    "pretest:dev": "cross-env TYPEORM_DATABASE=altiore_contrib_test node bin/refresh.js && npm run migration:test:up",
    "test:dev": "cross-env TYPEORM_DATABASE=altiore_contrib_test jest -i -b --detectOpenHandles --forceExit --watch",
    "test:coverage": "cross-env TYPEORM_DATABASE=altiore_contrib_test jest -i --forceExit --coverage",
    "pretest:changed:only": "npm run pretest",
    "test:changed:only": "cross-env TYPEORM_DATABASE=altiore_contrib_test jest -i -b --lastCommit --detectOpenHandles --forceExit",
    "pretest:remote": "node bin/refresh.js && npm run migration:up && echo  \"Please, do NOT run LOCALLY!\"",
    "test:remote": "jest --coverage -i --forceExit && echo -e \"Please, do NOT run LOCALLY!\"",
    "webpack": "webpack --config webpack.config.js",
    "prepare:mails": "mjml src/mail/mjml/*.mjml -o mails/",
    "typeorm": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:generate --name generated",
    "migration:create": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:create --name new",
    "migration:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "migration:test:up": "cross-env TYPEORM_DATABASE=altiore_contrib_test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:test:down": "cross-env TYPEORM_DATABASE=altiore_contrib_test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "ln:typeorm:fixtures": "rm -rf node_modules/typeorm-fixtures && ln -s $PWD/../../typeorm-fixtures $PWD/node_modules/typeorm-fixtures",
    "run-prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\" --print-width 120 --single-quote --trailing-comma es5",
    "run-lint": "tslint --fix -p tsconfig.test.json -c tslint.json",
    "lint": "npm run run-prettier && npm run run-lint"
  },
  "dependencies": {
    "@google-cloud/storage": "3.0.3",
    "@nestjs/common": "6.10.11",
    "@nestjs/core": "6.10.11",
    "@nestjs/microservices": "6.5.3",
    "@nestjs/passport": "6.1.0",
    "@nestjs/platform-express": "6.10.11",
    "@nestjs/platform-fastify": "6.10.11",
    "@nestjs/platform-socket.io": "6.10.11",
    "@nestjs/serve-static": "1.0.2",
    "@nestjs/swagger": "4.1.2",
    "@nestjs/typeorm": "6.2.0",
    "@nestjs/websockets": "6.10.11",
    "@nestjsx/crud": "4.4.1",
    "@nestjsx/crud-typeorm": "4.4.1",
    "@sendgrid/mail": "6.3.1",
    "cache-manager": "2.10.0",
    "cache-manager-redis-store": "1.5.0",
    "class-transformer": "0.1.9",
    "class-validator": "0.9.1",
    "cli-highlight": "2.1.1",
    "cookie-parser": "1.4.4",
    "crypto": "1.0.1",
    "fastify-formbody": "2.0.0",
    "fastify-swagger": "2.5.0",
    "generate-password": "1.4.1",
    "gravatar": "1.6.0",
    "helmet": "3.21.1",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.15",
    "moment": "2.22.2",
    "multer": "1.4.2",
    "mustache": "2.3.0",
    "passport": "0.4.0",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "pg": "7.4.3",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.2",
    "socket.io-redis": "5.2.0",
    "swagger-ui-express": "4.0.7",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.1",
    "@nestjs/schematics": "6.9.0",
    "@nestjs/testing": "6.10.11",
    "@types/express": "4.16.1",
    "@types/faker": "4.1.5",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.136",
    "@types/node": "10.5.1",
    "@types/redis": "2.8.13",
    "@types/socket.io": "2.1.4",
    "@types/supertest": "2.0.4",
    "cross-env": "^5.2.1",
    "dotenv": "6.0.0",
    "faker": "^4.1.0",
    "husky": "1.2.0",
    "jest": "24.8.0",
    "lint-staged": "7.2.2",
    "mjml": "4.5.1",
    "nodemon": "1.18.7",
    "prettier": "1.14.2",
    "rimraf": "2.6.2",
    "superagent-defaults": "0.1.14",
    "supertest": "3.3.0",
    "ts-jest": "24.0.2",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tsconfig-paths": "3.4.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typeorm-fixtures": "0.8.6",
    "typescript": "3.5.3",
    "webpack": "^4.41.5",
    "webpack-cli": "3.0.8",
    "webpack-node-externals": "1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://git.heroku.com/altiore.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run test:changed:only && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write --print-width 120 --single-quote --trailing-comma es5",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write --print-width 120 --single-quote --trailing-comma es5",
      "tslint --fix -t verbose -p tsconfig.test.json -c tslint.json",
      "git add"
    ],
    "*.{html,mjml}": [
      "npm run prepare:mails",
      "git add"
    ]
  }
}
