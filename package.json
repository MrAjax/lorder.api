{
  "name": "altiore-api",
  "version": "1.0.0",
  "description": "Calculate contribution",
  "author": "razvanlomov@gmail.com",
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "engines": {
    "node": "8.11.3"
  },
  "scripts": {
    "postinstall": "yarn build && yarn migration:up",
    "start": "node dist/main.js",
    "build": "rm -rf dist && tsc",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:hmr": "node dist/server",
    "pretest": "cross-env TYPEORM_DATABASE=altiore_contrib_test node bin/refresh.js && yarn migration:test:up",
    "test": "cross-env TYPEORM_DATABASE=altiore_contrib_test jest --maxWorkers=1 --detectOpenHandles",
    "pretest:remote": "echo  \"Please, do NOT run LOCALLY!\" && node bin/refresh.js && yarn migration:up",
    "test:remote": "echo -e \"Please, do NOT run LOCALLY!\" && jest --coverage --maxWorkers=1 --detectOpenHandles && codecov --token=d80eff89-9fdc-4a57-a585-70b6cbcf1abc",
    "test:e2e": "jest --config jest.config.e2e.js --maxWorkers=1 --detectOpenHandles",
    "webpack": "webpack --config webpack.config.js",
    "prepare:mails": "mjml src/mail/mjml/*.mjml -o mails/",
    "migration:generate": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:generate --name generated",
    "migration:create": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:create --name new",
    "migration:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "migration:test:up": "cross-env TYPEORM_DATABASE=altiore_contrib_test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:test:down": "cross-env TYPEORM_DATABASE=altiore_contrib_test ./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "precommit": "yarn test && rimraf mails/* && yarn prepare:mails && git add . && lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "5.0.1",
    "@nestjs/core": "5.0.1",
    "@nestjs/microservices": "5.0.1",
    "@nestjs/passport": "1.1.0",
    "@nestjs/swagger": "2.2.0",
    "@nestjs/testing": "5.0.1",
    "@nestjs/typeorm": "3.0.2",
    "@nestjs/websockets": "5.0.1",
    "@sendgrid/mail": "6.3.1",
    "class-transformer": "0.1.9",
    "class-validator": "0.8.5",
    "crypto": "1.0.1",
    "fastify-formbody": "2.0.0",
    "generate-password": "1.4.0",
    "jsonwebtoken": "8.3.0",
    "moment": "2.22.2",
    "mustache": "2.3.0",
    "passport": "0.4.0",
    "passport-http-bearer": "1.0.1",
    "passport-jwt": "4.0.0",
    "pg": "7.4.3",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.1",
    "typeorm": "0.2.7",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/jest": "21.1.2",
    "@types/lodash": "4.14.110",
    "@types/node": "10.5.1",
    "@types/supertest": "2.0.4",
    "codecov": "3.0.2",
    "dotenv": "6.0.0",
    "husky": "0.14.3",
    "jest": "23.2.0",
    "lint-staged": "7.2.0",
    "mjml": "4.1.0",
    "nodemon": "1.17.5",
    "prettier": "1.13.4",
    "rimraf": "2.6.2",
    "supertest": "3.1.0",
    "ts-jest": "23.0.0",
    "ts-loader": "4.4.2",
    "ts-node": "7.0.0",
    "tsconfig-paths": "3.4.2",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "webpack": "4.14.0",
    "webpack-cli": "3.0.8",
    "webpack-node-externals": "1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://git.heroku.com/altiore.git"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --print-width 120 --single-quote --parser typescript",
      "git add"
    ],
    "./src/**/*.{js,json,md}": [
      "prettier --write --print-width 120 --single-quote",
      "git add"
    ]
  }
}
