{
  "name": "altiore",
  "version": "1.0.0",
  "description": "calculate-contribution-for-users-in-project",
  "author": "razvanlomov@gmail.com",
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "engines": {
    "node": "8.9.0"
  },
  "scripts": {
    "postinstall": "yarn migration:up && rm -rf dist && tsc",
    "format": "prettier --write \"**/*.ts\"",
    "start": "node dist/main.js",
    "start:old": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod:old": "yarn migration:up && rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage && codecov --token=d80eff89-9fdc-4a57-a585-70b6cbcf1abc",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "mjml": "mjml src/mail/@mails/mjml/*.mjml -o mails/",
    "migration:generate": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:generate --name generated",
    "migration:create": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:create --name new",
    "migration:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "migration:test:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm --config .env.test migration:run",
    "migration:test:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm --config .env.test migration:revert",
    "precommit": "yarn test && lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0-beta.6",
    "@nestjs/core": "^5.0.0-beta.6",
    "@nestjs/microservices": "^5.0.0-beta.6",
    "@nestjs/passport": "^1.0.10",
    "@nestjs/swagger": "^2.0.0",
    "@nestjs/testing": "^5.0.0-beta.6",
    "@nestjs/typeorm": "^3.0.0",
    "@nestjs/websockets": "^5.0.0-beta.6",
    "@sendgrid/mail": "^6.2.1",
    "@types/lodash": "^4.14.109",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "fastify-formbody": "^2.0.0",
    "jsonwebtoken": "^8.2.1",
    "mjml": "^4.0.5",
    "moment": "^2.22.1",
    "mustache": "^2.3.0",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.6",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "codecov": "^3.0.2",
    "dotenv": "^6.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^7.1.3",
    "nodemon": "^1.14.1",
    "prettier": "1.13.4",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.1.0",
    "ts-node": "^6.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://git.heroku.com/altiore.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "prettier --write --print-width 120 --single-quote --parser typescript",
      "git add"
    ],
    "src/**/*.{js,json,md}": [
      "prettier --write --print-width 120 --single-quote",
      "git add"
    ]
  }
}
